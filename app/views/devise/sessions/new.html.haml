.user__container.login__container
  = render 'shared/registration/registration-header'

  %main.user__container__main
    .login__panel
      .login--no__account
        %p アカウントをお持ちでない方はこちら
        = link_to new_user_path do
          新規会員登録
      .login__inner-sns
        %button.registration__btn.btn-facebook
          = fa_icon "facebook-square", class: "facebook-icon"
          Facebookで登録
        %button.registration__btn.btn-google
          = fa_icon "google-plus", class: "google-icon"
          Googleで登録

      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login__inner
          .login__inner__group
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-default", placeholder: "メールアドレス"
          .login__inner__group
            = f.password_field :password, autocomplete: "current-password",class: "input-default", placeholder: "パスワード"

          .login__inner__group
            = recaptcha_tags
          .login-submit
            = f.submit "ログイン", class: "login-submit-btn"

          = link_to "/", class: "login__nav" do
            パスワードをお忘れの方

  = render 'shared/registration/registration-footer'
