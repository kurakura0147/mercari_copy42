.container
  = render 'shared/header'
  //ページのルート表示
  %nav.bread-crumbs
    %ul.bread-crumbs-rink
      = link_to "" do
        メルカリ
      = fa_icon "angle-right", class: "arrow-root"
      マイページ
      //ユーザーサイトのメイン部分
      //左のメニュー部分
  .l-container.clearfix
    = render 'shared/user'
    //右の大枠の部分。ユーザーページの右側の大枠は、変わらないため。
    .l-content
      %section.mypage-user-icon
        =link_to "#" , class: "user-information" do
          .figure
            = image_tag("380138525.jpg", width: "60", class: "current_user-icon")
            %h3.bold
              レッドブル
            .mypage-number
              .review
                評価
                %span.bold
                  10
              .exhibit
                出品数
                %span.bold
                  20
      .mypage-tab-container-notification-todo
        .tabs
          %input#information{:checked => "checked", :name => "tab_user", :type => "radio"}/
          %label.tab_user{:for => "information"}
            お知らせ
          %input#todo{:name => "tab_user", :type => "radio"}/
          %label.tab_user{:for => "todo"}
            やることリスト
          #information_content.tab_content
            //リストの全体
            = render 'shared/user-tab'
            //タブ内（やることリスト）
          #todo_content.tab_content
            = image_tag("user-joukyo" , :width => '100%' )

      //ユーザーの商品情報（下の部分）
      %section.mypage-tab-container
        %h2.mypage-tab-head
          購入した商品
        //タブの部分
        .tabs
          %input#torihiki-now{:checked => "checked", :name => "tab_item", :type => "radio"}/
          %label.tab_item{:for => "torihiki-now"}
            取引中
          %input#torihiki-kako{:name => "tab_item", :type => "radio"}/
          %label.tab_item{:for => "torihiki-kako"}
            過去の取引
          #torihiki-now_content.tab_content
            //リストの全体
            = render 'shared/user-tab'
          #torihiki-kako_content.tab_content
            = image_tag("user-joukyo" , :width => '100%' )

  = render 'shared/aside'
  = render 'shared/footer'
  = render 'shared/sell-btn'
