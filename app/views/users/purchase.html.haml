.container
  = render 'shared/header'
  .mypage-body.clearfix
    = render 'shared/user-side'
    .main__content
      //タブの開始
      .tabs
        %input#trade-now{:checked => "checked", :name => "tab_item", :type => "radio"}/
        %label.tab_item{:for => "trade-now"}
          取引中
        %input#trade-kako{:name => "tab_item", :type => "radio"}/
        %label.tab_item{:for => "trade-kako"}
          過去の取引
        #trade-now_content.tab_content
          %ul.trade-now-content
            %li.trade-now_content
              = render 'shared/purchase'
        #trade-kako_content.tab_content
          = image_tag("user-joukyo.png" , class: "tab-content__list--image" )

  = render 'shared/aside'
  = render 'shared/footer'
  = render 'shared/sell-btn'
