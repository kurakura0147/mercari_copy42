.container
  = render 'shared/header'
  //ページのルート表示
  %nav.bread-crumbs
    %ul.bread-crumbs__rink
      = link_to "メルカリ" , "/"
      = fa_icon "angle-right", class: "bread-crumbs__rink--arrow"
      = link_to "マイページ" , "/"
      = fa_icon "angle-right", class: "bread-crumbs__rink--arrow"
      ログアウト
      //ユーザーサイトのメイン部分
  .mypage-body.clearfix
    //左のメニュー部分
    = render 'shared/user-side'
    //右のコンテンツ
    .main__content
      .signout__content
        = button_tag("ログアウト" , class: "signout__content--button" , url: "destroy_user_session_path" , method: "delete")
  = render 'shared/aside'
  = render 'shared/footer'
  = render 'shared/sell-btn'
