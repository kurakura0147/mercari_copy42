.user__container
  %header.user__container__header
    %h1
      = link_to "/" do
        = image_tag("logo.svg", alt: "mercari", width: "185", height: "49")

  %main.user__container__main
    %section.user__box
      %h2.user__box__header 新規会員登録
      %section.user__box__inner
        .user__box__list
          = link_to new_user_registration_path, class: "registration__btn btn-mail" do
            = fa_icon "envelope-o", class: "mail-icon"
            メールアドレスで登録
          %button.registration__btn.btn-facebook
            = fa_icon "facebook-square", class: "facebook-icon"
            Facebookで登録
          %button.registration__btn.btn-google
            = fa_icon "google-plus", class: "google-icon"
            Googleで登録

  %footer.user__container__footer
    %nav
      %ul.user__footer__nav
        %li プライバシーポリシー
        %li メルカリ利用規約
        %li 特定商取引に関する表記
    = link_to "/", class: "user__footer__logo" do
      = image_tag("logo-gray.svg", alt: "mercari-gray", class: "user__footer__logo-gray")
    %p.user__footer__info
      %small ©︎ 2019 Mercari
